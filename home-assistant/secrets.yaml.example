# Home Assistant Secrets Example
# File: secrets.yaml
# 
# NEVER commit this file to version control!
# Copy this to your /config/secrets.yaml and fill in your values

# School portal credentials (for Node-RED if using environment variables)
school_portal_email: "your-email@example.com"
school_portal_password: "your-secure-password-here"

# School portal details
school_portal_url: "https://your-school-portal.com"
school_id: "12345"  # Your school ID from the portal URL

# Webhook secret (optional - for additional security)
lunch_menu_webhook_secret: "random-secret-key-here"

# Dashboard URL (optional)
lunch_menu_url: "/local/lunch-menu/dashboard.html"

# Notification settings (optional)
notify_email: "your-email@example.com"
notify_phone: "mobile_app_your_device"
